{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",
    "paths": {
        "@/*": ["src/*"],
        "@core/*": ["src/core/*"],
        "@components/*": ["src/components/*"],
        "@utils/*": ["src/utils/*"],
        "@arch/*": ["src/core/arch/*"],
        "@ui/*": ["src/ui/*"],
        "@visualizers/*": ["src/visualizers/*"]
      }
  },
  "include": [
    "src"
  ]
}
